import { Button } from "std-widgets.slint";

export component ErrorDialog inherits Rectangle {
    in-out property <bool> open;
    in property <string> title;
    in property <string> message;
    in property <string> action_text;
    callback close();

    visible: root.open;
    background: #00000066;
    height: 100%;
    width: 100%;

    // Center dialog
    Rectangle {
        x: (parent.width - self.width) / 2;
        y: (parent.height - self.height) / 2;
        width: 360px;
        height: 200px;
        border-radius: 12px;
        background: #ffffff;

        VerticalLayout {
            padding: 16px;
            spacing: 12px;
            
            // Title
            Text {
                text: root.title;
                font-size: 18px;
                font-weight: 700;
                color: #333;
            }
            
            // Message
            Text {
                text: root.message;
                font-size: 14px;
                color: #555;
                wrap: word-wrap;
            }
            
            // Divider
            Rectangle { 
                height: 1px; 
                background: #eeeeee; 
            }
            
            // Action button
            HorizontalLayout {
                alignment: end;
                spacing: 8px;
                Button {
                    text: root.action_text != "" ? root.action_text : "Close";
                    clicked => {
                        root.open = false;
                        root.close();
                    }
                }
            }
        }
    }
}
