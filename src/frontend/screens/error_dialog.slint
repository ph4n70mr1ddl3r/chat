import { Rectangle, VerticalBox, HorizontalBox, Text, Button } from "std-widgets.slint";

export component ErrorDialog inherits Rectangle {
    in-out property <bool> open;
    in property <string> title;
    in property <string> message;
    in property <string> action_text;
    callback close();

    visible: root.open;
    background: #00000066;
    height: 100%;
    width: 100%;
    z-order: 2;

    VerticalBox {
        vertical-alignment: center;
        horizontal-alignment: center;
        Rectangle {
            width: 360px;
            height: 200px;
            border-radius: 12px;
            background: #ffffff;
            padding: 16px;
            VerticalBox {
                spacing: 12px;
                Text {
                    text: root.title;
                    font-size: 18px;
                    font-weight: 700;
                    color: #333;
                }
                Text {
                    text: root.message;
                    font-size: 14px;
                    color: #555;
                    wrap: word-wrap;
                }
                Rectangle { height: 1px; background: #eeeeee; }
                HorizontalBox {
                    horizontal-alignment: end;
                    spacing: 8px;
                    Button {
                        text: root.action_text != "" ? root.action_text : "Close";
                        clicked => {
                            root.open = false;
                            root.close();
                        }
                    }
                }
            }
        }
    }
}
