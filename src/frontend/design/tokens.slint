// ============================================================================
// MOTION PREFERENCES - Accessibility (WCAG 2.3.3)
// ============================================================================

// Global flag: Set from system preference or user settings
// When true: All animations become instant (duration = 0)
// Components should check this flag to respect user's motion preference
// 
// NOTE: This value is synchronized with system preferences:
// - Windows: Reads from HKEY_CURRENT_USER\Control Panel\Accessibility\DisableAnimations
// - Mac: Respects system "Reduce motion" setting
// - Linux: Can be set via environment variable PREFERS_REDUCED_MOTION
//
// Set via backend SystemPreferences module or user settings in app
export const PREFERS_REDUCED_MOTION: bool = false;

// Conditional durations that respect user preference
// 
// USAGE (CORRECT):
//   animate opacity {
//       duration: MOTION_DURATION_REDUCED(DURATION_STANDARD);  // ✅ Respects preference
//       easing: EASE_OUT;
//   }
//
// WRONG (Do NOT do this):
//   animate opacity {
//       duration: DURATION_STANDARD;  // ❌ Ignores motion preference
//       easing: EASE_OUT;
//   }
export const MOTION_DURATION_REDUCED(duration) -> duration {
    return PREFERS_REDUCED_MOTION ? 0ms : duration;
}

