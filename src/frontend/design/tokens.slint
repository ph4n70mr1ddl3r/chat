// ============================================================================
// Design Token Constants
// ============================================================================

export global Tokens {
    // Colors
    in property <color> fluent_blue: #0078D4;
    in property <color> teal: #00A4EF;
    in property <color> neutral_dark: #333333;
    in property <color> neutral_medium: #666666;
    in property <color> neutral_light: #F5F5F5;
    in property <color> success: #107C10;
    in property <color> warning: #FFB900;
    in property <color> error: #E81123;

    // Typography Sizes
    in property <length> font_size_display: 48px;
    in property <length> font_size_headline: 28px;
    in property <length> font_size_subheading: 18px;
    in property <length> font_size_body: 14px;
    in property <length> font_size_caption: 12px;

    // Spacing
    in property <length> spacing_xs: 4px;
    in property <length> spacing_sm: 8px;
    in property <length> spacing_md: 12px;
    in property <length> spacing_lg: 16px;
    in property <length> spacing_xl: 20px;
    in property <length> spacing_xxl: 24px;

    // Durations
    in property <duration> duration_quick: 200ms;
    in property <duration> duration_standard: 300ms;
    in property <duration> duration_slow: 400ms;
    in property <duration> duration_very_slow: 800ms;
    
    // Preferences
    in property <bool> prefers_reduced_motion: false;
}
